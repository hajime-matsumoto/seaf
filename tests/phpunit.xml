<phpunit backupGlobals="false"
  backupStaticAttributes="false"
  bootstrap="./__bootstrap.php"
  cacheTokens="true"
  colors="false"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  processIsolation="false"
  stopOnFailure="true"
  syntaxCheck="false"
  verbose="true">
  <testsuites>
	  <testsuite name="AllClasses">
		  <directory suffix="Test.php">./tests/*</directory>
	  </testsuite>
	  <testsuite name="FW\Web">
		  <directory suffix="Test.php">./tests/FW/Web/*</directory>
	  </testsuite>
  </testsuites>
</phpunit>
